{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "strict": "off",
        "indent": ["error", 4],
        "no-use-before-define": "off",
        "max-len": ["error", { "code": 125 }],
        "no-nested-ternary": "off",
        "comma-dangle": "off"
    }
}
